<body>
    <div class="container">
        <h1>ระบบเช็คชื่อ</h1>
        <form id="attendanceForm" action="/submit-attendance" method="POST">
            <div class="form-group">
                <label for="studentId">รหัสนักเรียน/รหัสพนักงาน:</label>
                <input type="text" id="studentId" name="studentId" required placeholder="กรอกรหัสของคุณ">
            </div>
            <div class="form-group">
                <label for="password">รหัสผ่าน (ถ้ามี):</label>
                <input type="password" id="password" name="password" placeholder="กรอกรหัสผ่านของคุณ">
            </div>
            <button type="submit">เช็คชื่อเข้าเรียน/เข้างาน</button>
        </form>
        <div id="message" class="message"></div>
    </div>

    <script>
        // ส่วนนี้คือ JavaScript ซึ่งจะช่วยให้หน้าเว็บโต้ตอบได้
        // แต่ยังไม่สามารถบันทึกข้อมูลได้โดยไม่มี Server-side
        document.getElementById('attendanceForm').addEventListener('submit', function(event) {
            event.preventDefault(); // ป้องกันการส่งฟอร์มแบบปกติ

            const studentId = document.getElementById('studentId').value;
            const password = document.getElementById('password').value;
            const messageDiv = document.getElementById('message');

            if (studentId === '') {
                messageDiv.textContent = 'กรุณากรอกรหัสนักเรียน/รหัสพนักงาน';
                messageDiv.className = 'message error';
                return;
            }

            // ในระบบจริง ข้อมูลจะถูกส่งไปยังเซิร์ฟเวอร์เพื่อประมวลผลและบันทึก
            // ตัวอย่างนี้แสดงการจำลองการตอบกลับ
            messageDiv.textContent = 'กำลังส่งข้อมูล...';
            messageDiv.className = 'message';

            // จำลองการส่งข้อมูลไป Server (ในชีวิตจริงต้องใช้ fetch() หรือ XMLHttpRequest)
            setTimeout(() => {
                const currentTime = new Date().toLocaleString();
                messageDiv.textContent = `เช็คชื่อสำเร็จ! รหัส: ${studentId} เวลา: ${currentTime}`;
                messageDiv.className = 'message';
                document.getElementById('attendanceForm').reset(); // ล้างฟอร์ม
            }, 2000);
        });
    </script>
</body>
</html>
